# BarrHawk E2E - Environment Template
# Copy this to .env on every swarm node

# --- AI Intelligence ---
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=...

# --- Infrastructure ---
PORT=3000
DOCTOR_PORT=3000
IGOR_PORT=3001
FRANKENSTEIN_PORT=3100
DASHBOARD_PORT=3333

# --- Database ---
DATABASE_URL="file:./dev.db"

# --- Telemetry (Opt-out with 'false') ---
BARRHAWK_TELEMETRY=true
BARRHAWK_TELEMETRY_MODE=maximalist

# --- OS Control (Dart) ---
DART_CONTROLLER_URL=http://localhost:3100

# --- BarrHawk E2E Configuration (Legacy/Specific) ---
# Run browser in headless mode (true/false)
BARRHAWK_HEADLESS=false

# Default timeout in milliseconds
BARRHAWK_TIMEOUT=30000

# Directory to save screenshots
BARRHAWK_SCREENSHOT_DIR=./screenshots

# Log level (debug, info, warn, error)
BARRHAWK_LOG_LEVEL=info

# Enable self-healing selectors (true/false)
BARRHAWK_SELF_HEAL=true